<form class="elemental-css">
    <!-- Header -->
    <div class="flex flex-row">
        <div>
            <input type="text" name="name" value="{{actor.name}}"
                   class="{{theme.big_input}}"
                   placeholder="{{localize 'Elemental.CharName'}}">
            <input type="text" name="system.title" value="{{actor.system.title}}"
                   class="{{theme.big_input}} mt-1"
                   placeholder="{{localize 'Elemental.Race'}}">
            <input type="text" name="system.race" value="{{actor.system.race}}"
                   class="{{theme.big_input}} mt-1"
                   placeholder="{{localize 'Elemental.Title'}}">
        </div>
        <div class="max-w-32">
            <img src="{{actor.img}}" data-edit="img" alt="{{actor.name}}" class="m-1 rounded border-none">
        </div>
    </div>
    <!-- Tab header -->
    <nav class="{{theme.tab_backgound}}">
        <a class="elemental-tab-control {{theme.tab_active}}" data-tab="base-tab">
            {{localize 'Elemental.CharacterSheet.Base'}}
        </a>
        <a class="elemental-tab-control {{theme.tab_inactive}}" data-tab="equipment-tab">
            {{localize 'Elemental.CharacterSheet.Equipment'}}
        </a>
        <a class="elemental-tab-control {{theme.tab_inactive}}" data-tab="description-tab">
            {{localize 'Elemental.CharacterSheet.Description'}}
        </a>
        <a class="elemental-tab-control {{theme.tab_inactive}}" data-tab="rules-tab">
            {{localize 'Elemental.CharacterSheet.Rules'}}
        </a>
    </nav>
    <div id="base-tab" class="tab-content grid grid-cols-2 gap-4 mb-2">
        <div class="flex flex-col">
            <div class="grid grid-cols-9 gap-2">
                <span class="{{theme.text_attribute}} col-span-7">
                    {{localize 'Elemental.Attributes.Agility'}}
                </span>
                <input type="text" name="system.agility" value="{{actor.system.agility}}"
                       class="{{theme.small_input}}">
                <label class="{{theme.info_label}}">{{actor.agility_xp}} XP</label>
                <span class="{{theme.text_derived}} col-span-7">
                    {{localize "Elemental.Derived.Move"}}
                </span>
                <input type="text" name="system.current_move" value="{{actor.system.current_move}}"
                    class="{{theme.small_input}}">
                <label class="{{theme.info_label}}"> / {{actor.max_move}}</label>
            </div>
            <div class="{{theme.skill_box}}">
                Skill list
            </div>
        </div>
        <div class="flex flex-col">
            <div class="flex flex-row justify-between">
                <span class="{{theme.text_attribute}}">
                    {{localize 'Elemental.Attributes.Toughness'}}
                </span>
                <span>
                    <input type="text" name="system.toughness" value="{{actor.system.toughness}}"
                           class="{{theme.small_input}}">
                    <label>{{actor.toughness_xp}} XP</label>
                </span>
            </div>
            <div class="{{theme.skill_box}}">
                Skill list
            </div>
        </div>
        <div class="flex flex-col">
            <div class="flex flex-row justify-between">
                <span class="{{theme.text_attribute}}">
                    {{localize 'Elemental.Attributes.Awareness'}}
                </span>
                <span>
                    <input type="text" name="system.awareness" value="{{actor.system.awareness}}"
                           class="{{theme.small_input}}">
                    <label>{{actor.awareness_xp}} XP</label>
                </span>
            </div>
            <div class="{{theme.skill_box}}">
                Skill list
            </div>
        </div>
        <div class="flex flex-col">
            <div class="flex flex-row justify-between">
                <span class="{{theme.text_attribute}}">
                    {{localize 'Elemental.Attributes.Will'}}
                </span>
                <span>
                    <input type="text" name="system.will" value="{{actor.system.will}}" class="{{theme.small_input}}">
                    <label>{{actor.will_xp}} XP</label>
                </span>
            </div>
            <div class="{{theme.skill_box}}">
                Skill list
            </div>
        </div>
    </div>
    <div id="equipment-tab" class="tab-content hidden">
        Equipment
    </div>
    <div id="description-tab" class="tab-content hidden">
        Description
    </div>
    <div id="rules-tab" class="tab-content hidden">
        Rules
    </div>
</form>