<form class="elemental-css">
    <div class="flex flex-row justify-between">
        <div class="w-full">
            <input type="text" name="name" value="{{item.name}}"
               class="{{theme.big_input}} mb-4"
               placeholder="{{localize 'Elemental.ItemName'}}">
            <span class="w-full grid grid-cols-2 gap-2">
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.ItemSheet.Value"}}
                    </label>
                    <input type="text" name="system.score" value="{{item.system.score}}"
                        class="{{theme.small_input}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.Difficulty"}}
                    </label>
                    <input type="text" name="system.difficulty" value="{{item.system.difficulty}}"
                        class="{{theme.small_input}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.CastingTime"}}
                    </label>
                    <input type="text" name="system.casting_time" value="{{item.system.casting_time}}"
                        class="{{theme.three_quarters_input}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.Range"}}
                    </label>
                    <input type="text" name="system.range" value="{{item.system.range}}"
                        class="{{theme.small_input}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.Duration"}}
                    </label>
                    <input type="text" name="system.duration" value="{{item.system.duration}}"
                        class="{{theme.three_quarters_input}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.Concentration"}}
                    </label>
                    <input type="checkbox" name="system.concentration"
                        {{# if item.system.concentration }}checked{{/ if }}
                        class="{{theme.checkbox}}">
                </span>
                <span class="flex">
                    <label class="w-1/2 {{theme.text_attribute}}">
                        {{localize "Elemental.PowerSheet.Innate"}}
                    </label>
                    <input type="checkbox" name="system.innate"
                        {{# if item.system.innate }}checked{{/ if }}
                        class="{{theme.checkbox}}">
                </span>
            </span>
        </div>
        <div class="max-w-16">
            <img src="{{item.img}}" data-edit="img" alt="{{item.name}}" class="m-1 rounded-sm border-none">
        </div>
    </div>
    <div class="elemental-editor {{theme.text_description}} mt-2">
        {{editor
            item.system.description
            target='system.description'
            button=editable
            editable=editable
            engine="prosemirror"
        }}
    </div>
</form>